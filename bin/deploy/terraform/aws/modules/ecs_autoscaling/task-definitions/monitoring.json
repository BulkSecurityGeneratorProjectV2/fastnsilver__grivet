{
    "containerDefinitions": [
        {
            "environment": [
                {
                    "name": "ES_JAVA_OPTS",
                    "value": "-Xms2g -Xmx2g"
                }
            ],
            "essential": true,
            "image": "elasticsearch:latest",
            "name": "elasticsearch",
            "portMappings": [
                {
                    "containerPort": 9200,
                    "hostPort": 9200
                },
                {
                    "containerPort": 9300,
                    "hostPort": 9300
                }
            ]
        },
        {
            "essential": true,
            "image": "grafana/grafana:3.0.4",
            "links": [
                "graphite"
            ],
            "name": "grafana",
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000
                }
            ]
        },
        {
            "essential": true,
            "image": "hopsoft/graphite-statsd",
            "name": "graphite",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 8000
                },
                {
                    "containerPort": 2003,
                    "hostPort": 2003
                },
                {
                    "containerPort": 8125,
                    "hostPort": 8125
                },
                {
                    "containerPort": 8125,
                    "hostPort": 8125,
                    "protocol": "udp"
                },
                {
                    "containerPort": 8126,
                    "hostPort": 8126
                }
            ]
        },
        {
            "essential": true,
            "image": "kibana:latest",
            "links": [
                "elasticsearch"
            ],
            "name": "kibana",
            "portMappings": [
                {
                    "containerPort": 5601,
                    "hostPort": 5601
                }
            ]
        },
        {
            "command": [
                "redis://redis"
            ],
            "environment": [
                {
                    "name": "DEBUG",
                    "value": "true"
                },
                {
                    "name": "REDIS_DOCKER_HOST",
                    "value": "redis"
                },
                {
                    "name": "REDIS_KEY",
                    "value": "logstash"
                }
            ],
            "essential": true,
            "image": "rtoma/logspout-redis-logstash",
            "links": [
                "redis"
            ],
            "mountPoints": [
                {
                    "containerPath": "/var/run/docker.sock",
                    "sourceVolume": "VarRunDocker_Sock"
                }
            ],
            "name": "logspout"
        },
        {
            "command": [
                "logstash",
                "-f",
                "/logstash.conf",
                "-v"
            ],
            "essential": true,
            "image": "logstash:latest",
            "links": [
                "redis",
                "elasticsearch"
            ],
            "mountPoints": [
                {
                    "containerPath": "/logstash.conf",
                    "sourceVolume": "_MonitoringLogstash_Conf"
                }
            ],
            "name": "logstash"
        },
        {
            "essential": true,
            "image": "phpmyadmin/phpmyadmin",
            "links": [
                "db"
            ],
            "name": "phpmyadmin",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 4000
                }
            ]
        }
    ],
    "family": "",
    "volumes": [
        {
            "host": {
                "sourcePath": "./monitoring/logstash.conf"
            },
            "name": "_MonitoringLogstash_Conf"
        },
        {
            "host": {
                "sourcePath": "/var/run/docker.sock"
            },
            "name": "VarRunDocker_Sock"
        },
        {
            "host": {
                "sourcePath": "/"
            },
            "name": ""
        },
        {
            "host": {
                "sourcePath": "/sys"
            },
            "name": "Sys"
        },
        {
            "host": {
                "sourcePath": "/var/lib/docker/"
            },
            "name": "VarLibDocker"
        }
    ]
}