{
    "containerDefinitions": [
        {
            "environment": [
                {
                    "name": "KAFKA_ZOOKEEPER_CONNECT",
                    "value": "zk:2181"
                }
            ],
            "essential": true,
            "image": "wurstmeister/kafka",
            "links": [
                "zookeeper:zk"
            ],
            "mountPoints": [
                {
                    "containerPath": "/var/run/docker.sock",
                    "sourceVolume": "VarRunDocker_Sock"
                }
            ],
            "name": "kafka",
            "portMappings": [
                {
                    "containerPort": 9092,
                    "hostPort": 9092
                }
            ]
        },
        {
            "environment": [
                {
                    "name": "ZK_HOSTS",
                    "value": "zk:2181"
                }
            ],
            "essential": true,
            "image": "sheepkiller/kafka-manager",
            "links": [
                "zookeeper:zk"
            ],
            "name": "kafka-manager",
            "portMappings": [
                {
                    "containerPort": 9000,
                    "hostPort": 29000
                }
            ]
        },
        {
            "essential": true,
            "image": "wurstmeister/zookeeper",
            "name": "zookeeper",
            "portMappings": [
                {
                    "containerPort": 2181,
                    "hostPort": 2181
                }
            ]
        }
    ],
    "family": "",
    "volumes": [
        {
            "host": {
                "sourcePath": "/var/run/docker.sock"
            },
            "name": "VarRunDocker_Sock"
        }
    ]
}